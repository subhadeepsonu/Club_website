generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model events {
  id          Int    @id @default(autoincrement())
  name        String
  imgurl      String
  description String
  date        String
  year        Int    @default(2024)
  location    String
}

model department {
  id      Int       @id @default(autoincrement())
  name    String
  imgurl  String
  members members[]
  year    Int
}

model members {
  id           Int        @id @default(autoincrement())
  name         String
  imgurl       String
  department   department @relation(fields: [departmentid], references: [id])
  departmentid Int
  role         String     @default("Member")
}
