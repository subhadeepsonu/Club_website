generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model events {
  name        String   @id
  imgurl      String
  description String
  date        DateTime
  location    String
}

model department {
  name    String    @id
  imgurl  String
  members members[]
}

model members {
  id             Int        @id @default(autoincrement())
  name           String
  imgurl         String
  department     department @relation(fields: [departmentName], references: [name])
  departmentName String
  role           String
}
